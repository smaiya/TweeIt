<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.smaiya.example.tweeit"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/twitter_icon"
        android:label="@string/app_name"
        android:theme="@style/Theme.HighlightCopy" >
        <activity
            android:name="com.smaiya.example.tweeit.LoginActivity"
            android:label="@string/title_activity_login" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="cpsimpletweet"
                    android:scheme="oauth" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.smaiya.example.tweeit.TimelineActivity"
            android:label="@string/title_activity_timeline" >
        </activity>
        <activity
            android:name="com.smaiya.example.tweeit.TweetComposeActivity"
            android:label="@string/title_activity_tweet_compose" >
        </activity>
        <activity
            android:name="com.smaiya.example.tweeit.TweetDetailedViewActivity"
            android:label="@string/title_activity_tweet_detailed_view" >
        </activity>
    </application>

</manifest>